# ===========================================
# CONFIGURACIÓN DE AUTOMATIZACIONES N8N
# ===========================================

# Configuración de n8n
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# Autenticación básica (CAMBIAR EN PRODUCCIÓN)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Configuración de PostgreSQL
POSTGRES_DB=n8n_automatizaciones
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=n8n_secure_password_2025

# Configuración de zona horaria
GENERIC_TIMEZONE=America/Mexico_City

# Configuración de telemetría y templates
N8N_DIAGNOSTICS_ENABLED=false
N8N_TEMPLATES_ENABLED=false

# Configuración de logs
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN (DESCOMENTAR)
# ===========================================

# Para producción, cambiar estos valores:
# N8N_HOST=tu-dominio.com
# N8N_PROTOCOL=https
# WEBHOOK_URL=https://tu-dominio.com
# N8N_BASIC_AUTH_PASSWORD=password_super_seguro_aqui

# ===========================================
# CONFIGURACIÓN DE SSL (OPCIONAL)
# ===========================================

# Si usas SSL/TLS, descomenta estas líneas:
# SSL_EMAIL=tu-email@dominio.com
# SSL_DOMAIN=tu-dominio.com

